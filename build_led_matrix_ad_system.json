ar cnx = new XMLHttpRequest();\\n      cnx.onreadystatechange = function() {\\n        if (this.readyState == 4 && this.status == 200) {\\n          // Parse the response from the server\\n          var data = JSON.parse(this.responseText);\\n          \\n          // Iterate through the data and create the table rows\\n          for (var i = 0; i < data.length; i++) {\\n            var ad = data[i];\\n            var row = document.createElement(\\\"tr\\\");\\n            row.innerHTML = \\\"<td>\\\" + ad.id + \\\"</td>\\\" +\\n                           \\\"<td>\\\" + ad.ad_start_time + \\\"</td>\\\" +\\n                           \\\"<td>\\\" + ad.ad_end_time + \\\"</td>\\\" +\\n                           \\\"<td>\\\" + ad.ad_name + \\\"</td>\\\" +\\n                           \\\"<td>\\\" + ad.ad_description + \\\"</td>\\\" +\\n                           \\\"<td>\\\" + ad.file_name + \\\"</td>\\\";\\n            document.getElementById(\\\"ads-table-body\\\").appendChild(row);\\n          }\\n        }\\n      };\\n      cnx.open(\\\"GET\\\", \\\"/fetchdata.py\\\", true);\\n      cnx.send();\\n    </script>\\n\\n  </tbody>\\n\\n</table>\\n\\n<!-- Modal for displaying image or video -->\\n<div id=\\\"preview-modal\\\" class=\\\"modal\\\">\\n  <span class=\\\"close\\\">&times;</span>\\n  <img class=\\\"modal-content\\\" id=\\\"preview-image\\\">\\n  <video class=\\\"modal-content\\\" id=\\\"preview-video\\\" controls></video>\\n</div>\\n\\n<!-- Modal for editing an ad -->\\n<div id=\\\"edit-modal\\\" class=\\\"modal\\\">\\n  <span class=\\\"close\\\">&times;</span>\\n  <form id=\\\"edit-form\\\">\\n    <label for=\\\"edit-start-time\\\">Start Time:</label><br>\\n    <input type=\\\"datetime-local\\\" id=\\\"edit-start-time\\\" name=\\\"edit-start-time\\\"><br>\\n    <label for=\\\"edit-end-time\\\">End Time:</label><br>\\n    <input type=\\\"datetime-local\\\" id=\\\"edit-end-time\\\" name=\\\"edit-end-time\\\"><br>\\n    <label for=\\\"edit-ad-name\\\">Ad Name:</